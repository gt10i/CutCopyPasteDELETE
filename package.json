{
  "name": "cutcopypastedelete",
  "displayName": "CutCopyPasteDELETE",
  "author": {
    "name": "WhiteCat Software"
  },
  "publisher": "WhiteCat Software",
  "description": "Adds Delete to the editor's right click context menu",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.88.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cutcopypastedelete.deleteEditorContextMenu",
        "title": "Delete"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "cutcopypastedelete.deleteEditorContextMenu",
          "when": "editorHasSelection"
        }
      ],
      "editor/context": [
        {
          "command": "cutcopypastedelete.deleteEditorContextMenu",
          "group": "9_cutcopypaste@5"
        }
      ]
    },
    "configuration": {
      "title": "DeleteLineWhenNoTextSelected",
      "properties": {
        "cutcopypastedelete.deleteLineOnNoSeletion": {
          "type": "boolean",
          "default": true,
          "description": "Delete line if no text is selected."
        },
        "cutcopypastedelete.emptyLineOnNoSeletion": {
          "type": "boolean",
          "default": false,
          "description": "Delete line if no text is selected."
        },
        "cutcopypastedelete.deleteWordUnderTheCaret": {
          "type": "boolean",
          "default": false,
          "description": "Delete the word the caret is pointing at."
        },
        "cutcopypastedelete.trimRight": {
          "type": "boolean",
          "default": false,
          "description": "Delete the word the caret is pointing at and trim right spaces."
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.88.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9"
  }
}